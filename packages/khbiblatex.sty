% replace "and" with "&" in citations
\if@useampersand
    \DeclareDelimFormat[textcite,parencite]{finalnamedelim}{%
        \ifnumgreater{\value{liststop}}{2}{\finalandcomma}{}%
        \addspace\&\space}
\else
\fi

% short references
\if@shortbib
    \AtEveryBibitem{%
        \clearname{editor}%
        \clearlist{publisher}%
        \clearlist{location}%
        \clearfield{isbn}%
        \clearfield{issn}%
        \clearfield{pages}%
        \clearfield{url}%
        \clearfield{doi}%
    }
\else
\fi

%% format undated works

%% Use pubstate after name if no date.
\DeclareLabeldate{%
    \field{date}
    \field{year}
    \field{pubstate}   % <-- NEW
    \literal{nodate}
}

%% Don't print pubstate at end.
\renewbibmacro*{addendum+pubstate}{}

%% Shorten ``in prep''
\DefineBibliographyStrings{english}{inpreparation={in prep\adddot}}

% single paragraph bibliography
\if@inlinebib
\DeclareNameWrapperFormat{sortname}{\mkbibbold{#1}}
\renewcommand{\bibfont}{\footnotesize}

\defbibenvironment{bibliography}{%
    \newtoggle{firstentry}
    \toggletrue{firstentry}
    \newcommand{\bibentry}{%
        \iftoggle{firstentry}
        {\global\togglefalse{firstentry}}
        {\space\textbullet\space}}
}{\endgraf}{
    \iftoggle{firstentry}
    {\global\togglefalse{firstentry}}
    {\textbullet\space}}
\else
\fi

% only print one of {doi, eprint, url}
\renewbibmacro*{doi+eprint+url}{%
    \iftoggle{bbx:doi}
    {\iffieldundef{url}{\printfield{doi}}{}}
    {}%
    \newunit\newblock
    \iftoggle{bbx:eprint}
    {\usebibmacro{eprint}}
    {}%
    \newunit\newblock
    \iftoggle{bbx:url}
    {\usebibmacro{url+urldate}}
    {}}
